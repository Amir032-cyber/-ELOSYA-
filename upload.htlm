<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Vid√©o - Elosya</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        .upload-container {
            max-width: 600px;
            margin: 40px auto;
            padding: 30px;
            background: var(--dark-light);
            border-radius: var(--border-radius-large);
        }
        
        .upload-area {
            border: 3px dashed var(--primary);
            border-radius: var(--border-radius);
            padding: 60px 30px;
            text-align: center;
            margin-bottom: 30px;
            cursor: pointer;
            transition: var(--transition);
        }
        
        .upload-area:hover {
            background: rgba(108, 99, 255, 0.05);
            border-color: var(--secondary);
        }
        
        .upload-area i {
            font-size: 60px;
            color: var(--primary);
            margin-bottom: 20px;
            display: block;
        }
        
        .upload-preview {
            max-width: 100%;
            border-radius: var(--border-radius);
            margin-top: 20px;
            display: none;
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        .form-label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: var(--light);
        }
        
        .form-control {
            width: 100%;
            padding: 15px;
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: var(--border-radius);
            color: var(--light);
            font-size: 1rem;
        }
        
        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            background: rgba(108, 99, 255, 0.05);
        }
        
        textarea.form-control {
            min-height: 100px;
            resize: vertical;
        }
        
        .hashtag-input {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
        }
        
        .hashtag {
            background: rgba(108, 99, 255, 0.15);
            color: var(--primary);
            padding: 6px 15px;
            border-radius: 20px;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .hashtag-remove {
            cursor: pointer;
            font-size: 0.8rem;
        }
        
        .monetization-info {
            background: rgba(6, 214, 160, 0.1);
            border: 1px solid rgba(6, 214, 160, 0.3);
            border-radius: var(--border-radius);
            padding: 20px;
            margin: 30px 0;
        }
        
        .monetization-info h4 {
            color: var(--success);
            margin-bottom: 15px;
        }
        
        .upload-progress {
            background: rgba(255,255,255,0.05);
            height: 6px;
            border-radius: 3px;
            margin: 20px 0;
            overflow: hidden;
            display: none;
        }
        
        .progress-bar {
            height: 100%;
            background: var(--gradient);
            width: 0%;
            transition: width 0.3s;
        }
        
        .upload-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 20px;
            margin: 30px 0;
        }
        
        .stat-item {
            text-align: center;
            padding: 20px;
            background: rgba(255,255,255,0.03);
            border-radius: var(--border-radius);
        }
        
        .stat-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 5px;
        }
        
        .stat-label {
            font-size: 0.9rem;
            color: var(--gray);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="upload-container">
            <h2 style="text-align: center; margin-bottom: 30px;">
                <i class="fas fa-video"></i> Publier une vid√©o
            </h2>
            
            <!-- Zone d'upload -->
            <div class="upload-area" id="uploadArea">
                <i class="fas fa-cloud-upload-alt"></i>
                <h3>Glissez-d√©posez votre vid√©o</h3>
                <p>ou cliquez pour s√©lectionner</p>
                <p style="color: var(--gray); font-size: 0.9rem; margin-top: 10px;">
                    Formats support√©s: MP4, MOV, AVI (max. 500MB)
                </p>
                <input type="file" id="videoFile" accept="video/*" style="display: none;">
                <video class="upload-preview" id="videoPreview" controls></video>
            </div>
            
            <!-- Infos mon√©tisation -->
            <div class="monetization-info">
                <h4><i class="fas fa-money-bill-wave"></i> Gains potentiels</h4>
                <p>Cette vid√©o peut vous rapporter:</p>
                <div class="upload-stats">
                    <div class="stat-item">
                        <div class="stat-value">0,01‚Ç¨</div>
                        <div class="stat-label">par 1000 vues</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">0,05‚Ç¨</div>
                        <div class="stat-label">par 20 likes</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">0,10‚Ç¨</div>
                        <div class="stat-label">par 10 partages</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">0,02‚Ç¨</div>
                        <div class="stat-label">par 50 commentaires</div>
                    </div>
                </div>
            </div>
            
            <!-- Formulaire -->
            <form id="uploadForm">
                <div class="form-group">
                    <label class="form-label">Titre de la vid√©o *</label>
                    <input type="text" class="form-control" id="videoTitle" 
                           placeholder="Donnez un titre attractif..." required>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" id="videoDescription" 
                              placeholder="D√©crivez votre vid√©o... #hashtags"></textarea>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Hashtags</label>
                    <input type="text" class="form-control" id="hashtagInput" 
                           placeholder="#bien√™tre #mental #yoga (appuyez sur Entr√©e)">
                    <div class="hashtag-input" id="hashtagContainer"></div>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Visibilit√©</label>
                    <select class="form-control" id="visibility">
                        <option value="public">üåç Public - Visible par tous</option>
                        <option value="premium">‚≠ê Premium - Membres uniquement</option>
                        <option value="private">üîí Priv√© - Seulement moi</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label class="form-label">
                        <input type="checkbox" id="monetize" checked>
                        Activer la mon√©tisation
                    </label>
                    <small style="color: var(--gray); display: block; margin-top: 5px;">
                        En cochant cette case, vous acceptez de partager vos revenus selon 
                        les conditions de mon√©tisation d'Elosya.
                    </small>
                </div>
                
                <!-- Barre de progression -->
                <div class="upload-progress" id="progressBar">
                    <div class="progress-bar" id="progressFill"></div>
                </div>
                
                <!-- Boutons -->
                <div style="display: flex; gap: 15px; margin-top: 30px;">
                    <button type="button" class="btn btn-outline" onclick="window.history.back()">
                        <i class="fas fa-times"></i> Annuler
                    </button>
                    <button type="submit" class="btn btn-primary" id="uploadBtn">
                        <i class="fas fa-upload"></i> Publier la vid√©o
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <script src="js/upload.js"></script>
    <script>
        const uploadArea = document.getElementById('uploadArea');
        const videoFileInput = document.getElementById('videoFile');
        const videoPreview = document.getElementById('videoPreview');
        const uploadForm = document.getElementById('uploadForm');
        const hashtagInput = document.getElementById('hashtagInput');
        const hashtagContainer = document.getElementById('hashtagContainer');
        const progressBar = document.getElementById('progressBar');
        const progressFill = document.getElementById('progressFill');
        const uploadBtn = document.getElementById('uploadBtn');
        
        let selectedFile = null;
        let hashtags = ['#elosya', '#bien√™tre'];
        
        // Afficher les hashtags par d√©faut
        renderHashtags();
        
        // Gestion drag & drop
        uploadArea.addEventListener('click', () => videoFileInput.click());
        
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = 'var(--secondary)';
            uploadArea.style.background = 'rgba(108, 99, 255, 0.05)';
        });
        
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.style.borderColor = 'var(--primary)';
            uploadArea.style.background = 'transparent';
        });
        
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = 'var(--primary)';
            uploadArea.style.background = 'transparent';
            
            const file = e.dataTransfer.files[0];
            if (file && file.type.startsWith('video/')) {
                handleFileSelect(file);
            } else {
                alert('Veuillez s√©lectionner un fichier vid√©o.');
            }
        });
        
        // Gestion s√©lection fichier
        videoFileInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                handleFileSelect(file);
            }
        });
        
        function handleFileSelect(file) {
            if (file.size > 500 * 1024 * 1024) { // 500MB
                alert('Le fichier est trop volumineux (max. 500MB).');
                return;
            }
            
            selectedFile = file;
            
            // Afficher pr√©visualisation
            const url = URL.createObjectURL(file);
            videoPreview.src = url;
            videoPreview.style.display = 'block';
            
            // Mettre √† jour l'interface
            uploadArea.querySelector('h3').textContent = file.name;
            uploadArea.querySelector('p').textContent = 
                `(${(file.size / (1024 * 1024)).toFixed(2)} MB)`;
        }
        
        // Gestion hashtags
        hashtagInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                e.preventDefault();
                const tag = hashtagInput.value.trim();
                if (tag && !hashtags.includes(tag)) {
                    hashtags.push(tag.startsWith('#') ? tag : '#' + tag);
                    hashtagInput.value = '';
                    renderHashtags();
                }
            }
        });
        
        function renderHashtags() {
            hashtagContainer.innerHTML = '';
            hashtags.forEach(tag => {
                const span = document.createElement('span');
                span.className = 'hashtag';
                span.innerHTML = `
                    ${tag}
                    <span class="hashtag-remove" onclick="removeHashtag('${tag}')">√ó</span>
                `;
                hashtagContainer.appendChild(span);
            });
        }
        
        function removeHashtag(tag) {
            hashtags = hashtags.filter(t => t !== tag);
            renderHashtags();
        }
        
        // Soumission formulaire
        uploadForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            if (!selectedFile) {
                alert('Veuillez s√©lectionner une vid√©o.');
                return;
            }
            
            const formData = new FormData();
            formData.append('video', selectedFile);
            formData.append('title', document.getElementById('videoTitle').value);
            formData.append('description', document.getElementById('videoDescription').value);
            formData.append('hashtags', JSON.stringify(hashtags));
            formData.append('visibility', document.getElementById('visibility').value);
            formData.append('monetize', document.getElementById('monetize').checked);
            
            // D√©sactiver bouton
            uploadBtn.disabled = true;
            uploadBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Publication...';
            
            // Afficher progression
            progressBar.style.display = 'block';
            
            try {
                // Simulation upload (remplac√© par API r√©elle)
                await simulateUpload(formData);
                
                // Succ√®s
                alert('‚úÖ Vid√©o publi√©e avec succ√®s!');
                window.location.href = 'feed.html';
                
            } catch (error) {
                alert('‚ùå Erreur lors de la publication: ' + error.message);
                uploadBtn.disabled = false;
                uploadBtn.innerHTML = '<i class="fas fa-upload"></i> Publier la vid√©o';
            }
        });
        
        // Simulation upload avec progression
        function simulateUpload(formData) {
            return new Promise((resolve) => {
                let progress = 0;
                const interval = setInterval(() => {
                    progress += 10;
                    progressFill.style.width = `${progress}%`;
                    
                    if (progress >= 100) {
                        clearInterval(interval);
                        // Simuler traitement serveur
                        setTimeout(() => {
                            console.log('Vid√©o upload√©e:', {
                                title: formData.get('title'),
                                description: formData.get('description'),
                                hashtags: JSON.parse(formData.get('hashtags'))
                            });
                            resolve();
                        }, 500);
                    }
                }, 200);
            });
        }
        
        // API r√©elle (√† impl√©menter)
        async function uploadToServer(formData) {
            const response = await fetch('/api/upload/video', {
                method: 'POST',
                body: formData
                // headers automatiques pour FormData
            });
            
            if (!response.ok) {
                throw new Error('Erreur serveur');
            }
            
            return response.json();
        }
    </script>
</body>
</html>
